<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="searchEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:background">@drawable/background_et_search</item>
        <item name="android:textColor">@color/textColorSearch</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>

    <style parent="Widget.MaterialComponents.Button.OutlinedButton" name="Widget.App.Button.OutlinedButton.IconOnly">

        <item name="iconPadding">0dp</item>

        <item name="android:insetTop">0dp</item>

        <item name="android:insetBottom">0dp</item>

        <item name="android:paddingLeft">12dp</item>

        <item name="android:paddingRight">12dp</item>

        <item name="android:minWidth">48dp</item>

        <item name="android:minHeight">48dp</item>

    </style>

</resources>